<% if @article.errors.any? %>

<h2>The following errors prevented the article from getting created</h2>

<ul>

<% @article.errors.full_messages.each do |msg| %>

<li><%= msg %></li>

<% end %>

</ul>

<% end %>
<%= form_for @article do|t| %>
   <p> <%= t.label:Title %> </br>
    <%= t.text_field:title %></p> </br>
   <p> <%= t.label:Description %> </br>
    <%= t.text_area:description %></p> </br>
    
    <%= t.submit%>
<% end %>